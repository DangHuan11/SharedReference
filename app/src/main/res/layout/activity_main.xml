<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Tiêu đề -->
        <TextView
            android:text="Lưu dữ liệu bài tập"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Card 1: Thông tin -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="3dp"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:clipToOutline="true"
            android:backgroundTint="#FFFFFF">

            <TextView
                android:text="Chọn kích thước chữ:"
                android:textStyle="bold"
                android:textColor="#333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioGroup
                android:id="@+id/rgSize"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">
                <RadioButton
                    android:id="@+id/rbNho"
                    android:text="Nhỏ"
                    android:checked="true"
                    android:buttonTint="#2196F3"
                    android:textColor="#333" />
                <RadioButton
                    android:id="@+id/rbVua"
                    android:text="Vừa"
                    android:buttonTint="#2196F3"
                    android:textColor="#333" />
                <RadioButton
                    android:id="@+id/rbTo"
                    android:text="To"
                    android:buttonTint="#2196F3"
                    android:textColor="#333" />
            </RadioGroup>

            <TextView
                android:text="Tổng số bài:"
                android:textStyle="bold"
                android:textColor="#333"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etTong"
                android:hint="Nhập tổng số bài"
                android:inputType="number"
                android:background="@android:drawable/edit_text"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Tên tệp (.txt):"
                android:textStyle="bold"
                android:textColor="#333"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <EditText
                    android:id="@+id/etTenTep"
                    android:hint="Tên file"
                    android:background="@android:drawable/edit_text"
                    android:padding="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text=".txt"
                    android:textColor="#555"
                    android:textSize="16sp"
                    android:layout_marginStart="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <!-- Card 2: Nội dung -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="3dp"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToOutline="true">

            <TextView
                android:text="Nhập nội dung:"
                android:textStyle="bold"
                android:textColor="#333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etDong1"
                android:hint="Dòng 1"
                android:background="@android:drawable/edit_text"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/etDong2"
                android:hint="Dòng 2"
                android:background="@android:drawable/edit_text"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/etDong3"
                android:hint="Dòng 3"
                android:background="@android:drawable/edit_text"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Nút thao tác -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnDoc"
                android:text="Đọc lại"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:padding="10dp" />

            <Button
                android:id="@+id/btnLuu"
                android:text="Lưu vào"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:padding="10dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
